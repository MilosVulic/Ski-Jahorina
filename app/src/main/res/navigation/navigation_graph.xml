<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.skiserbia.main.HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.skiserbia.features.settings.SettingsFragment" />

    <fragment
        android:id="@+id/skiCenterDetailsFragment"
        android:name="com.example.skiserbia.features.lifts.SkiCenterDetailsFragment" />

    <fragment
        android:id="@+id/skiMapKopaonikFragment"
        android:name="com.example.skiserbia.features.maps.KopaonikMapFragment" />

    <action
        android:id="@+id/action_global_settingsFragment"
        app:destination="@id/settingsFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        app:popUpTo="@id/FirstFragment"
        app:popUpToInclusive="false" />

    <action
        android:id="@+id/action_kopaonik"
        app:destination="@id/skiCenterDetailsFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        app:popUpTo="@id/FirstFragment"
        app:popUpToInclusive="false" />

    <action
        android:id="@+id/action_ski_map_kopaonik"
        app:destination="@id/skiMapKopaonikFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        app:popUpTo="@id/FirstFragment"
        app:popUpToInclusive="false" />
</navigation>
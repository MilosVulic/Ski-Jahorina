<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        android:theme="@style/AppTheme.ApplicationRipple"
        app:cardBackgroundColor="@color/colorCardBackgroundWeather"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="3dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:text="Mon"
                android:textColor="@color/currentWeatherTitleColor"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:padding="0dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewDate"
                app:layout_constraintStart_toStartOf="@+id/textViewDate"
                app:layout_constraintEnd_toEndOf="@+id/textViewDate"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13.02.2023"
                android:textColor="@color/currentWeatherTitleColor"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:padding="0dp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageView
                android:id="@+id/imageViewWeather"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_partially_cloudy"
                android:layout_marginStart="50dp"
                app:tint="@color/skiCenterAltitudeIcon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textViewDate"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewMaxTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="4°"
                android:textColor="@color/currentWeatherTitleColor"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/textViewSlash"
                app:layout_constraintEnd_toStartOf="@+id/textViewSlash"
                app:layout_constraintTop_toTopOf="@+id/textViewSlash" />

            <TextView
                android:id="@+id/textViewSlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="/"
                android:textColor="@color/currentWeatherTitleColor"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/textViewMinTemperature"
                app:layout_constraintEnd_toStartOf="@+id/textViewMinTemperature"
                app:layout_constraintTop_toTopOf="@+id/textViewMinTemperature" />

            <TextView
                android:id="@+id/textViewMinTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="-1°"
                android:textColor="@color/currentWeatherTitleColor"
                android:textSize="18sp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewTemperature"
                app:layout_constraintEnd_toStartOf="@+id/imageViewTemperature"
                app:layout_constraintTop_toTopOf="@+id/imageViewTemperature" />

            <TextView
                android:id="@+id/textViewWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="11 ms"
                android:textColor="@color/currentWeatherTitleColor"
                android:textSize="18sp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewWind"
                app:layout_constraintEnd_toStartOf="@+id/imageViewWind"
                app:layout_constraintTop_toTopOf="@+id/imageViewWind" />

            <ImageView
                android:id="@+id/imageViewTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_temperature"
                app:tint="@color/colorBlackWhite"
                app:layout_constraintBottom_toTopOf="@+id/imageViewWind"
                app:layout_constraintEnd_toEndOf="@+id/imageViewWind"
                app:layout_constraintStart_toStartOf="@+id/imageViewWind"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_air"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:padding="0dp"
                app:tint="@color/colorBlackWhite"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>


